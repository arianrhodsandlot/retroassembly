{
  "private": true,
  "repository": "arianrhodsandlot/retroassembly",
  "type": "module",
  "imports": {
    "#@/*": "./src/*"
  },
  "scripts": {
    "build": "react-router build",
    "build:node": "node --run=build",
    "build:workerd": "node --run=build",
    "check-lockfile": "node scripts/check-lockfile.ts",
    "dev": "react-router",
    "dev:node": "node --run=dev",
    "dev:test": "node --run=test -- --headed --ui",
    "dev:workerd": "node --run=dev",
    "lint": "oxlint --type-aware",
    "serve": "node dist/server/serve.js",
    "serve:node": "node --run=serve",
    "serve:workerd": "wrangler dev --port=8000",
    "setup": "node scripts/setup.ts",
    "start": "node --run=serve",
    "tag": "node scripts/tag.ts",
    "test": "playwright test -c tests/e2e --tsconfig=tests/e2e/tsconfig.playwright.json"
  },
  "dependencies": {
    "better-sqlite3": "12.6.2",
    "hono": "4.11.7"
  },
  "devDependencies": {
    "@arianrhodsandlot/oxc-config": "1.1.0",
    "@cloudflare/vite-plugin": "1.23.0",
    "@hono/node-server": "1.19.9",
    "@hono/vite-dev-server": "0.24.1",
    "@hono/zod-validator": "0.7.6",
    "@iconify-json/logos": "1.2.10",
    "@iconify-json/mdi": "1.2.3",
    "@iconify-json/noto": "1.2.7",
    "@iconify-json/simple-icons": "1.2.69",
    "@iconify-json/svg-spinners": "1.2.4",
    "@iconify-json/twemoji": "1.2.5",
    "@iconify/tailwind4": "1.2.1",
    "@microsoft/clarity": "1.0.2",
    "@playwright/test": "1.58.1",
    "@radix-ui/themes": "3.3.0",
    "@react-router/dev": "7.13.0",
    "@react-router/node": "7.13.0",
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "2.94.0",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "4.1.18",
    "@tsconfig/remix": "2.0.6",
    "@types/canvas-confetti": "1.9.0",
    "@types/fs-extra": "11.0.4",
    "@types/js-cookie": "3.0.6",
    "@types/luxon": "3.7.1",
    "@types/nanoid-dictionary": "4.2.3",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@types/spark-md5": "3.0.5",
    "@typescript/native-preview": "7.0.0-dev.20260203.1",
    "@zip.js/zip.js": "2.8.16",
    "atropos": "2.0.2",
    "browser-fs-access": "0.38.0",
    "canvas-confetti": "1.9.4",
    "ci-info": "4.4.0",
    "clsx": "2.1.1",
    "delegated-events": "1.1.2",
    "drizzle-kit": "0.31.8",
    "drizzle-orm": "0.45.1",
    "es-toolkit": "1.44.0",
    "esbuild": "0.27.2",
    "execa": "9.6.1",
    "fs-extra": "11.3.3",
    "fuse.js": "7.1.0",
    "gamepad.js": "2.1.0",
    "goodcodes-parser": "2.5.0",
    "hono-react-router-adapter": "0.6.5",
    "i18next": "25.8.1",
    "is-docker": "4.0.0",
    "isbot": "5.1.34",
    "jiti": "2.6.1",
    "jotai": "2.17.0",
    "jotai-ssr": "0.2.0",
    "js-cookie": "3.0.5",
    "lint-staged": "16.2.7",
    "luxon": "3.7.2",
    "miniflare": "4.20260131.0",
    "motion": "12.31.0",
    "msleuth": "github:arianrhodsandlot/msleuth",
    "nanoid": "5.1.6",
    "nanoid-dictionary": "5.0.0",
    "next-themes": "0.4.6",
    "nostalgist": "0.20.0",
    "oxfmt": "0.28.0",
    "oxlint": "1.43.0",
    "oxlint-tsgolint": "0.11.4",
    "path-to-regexp": "8.3.0",
    "quick-lru": "7.3.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-dropzone": "14.4.0",
    "react-i18next": "16.5.4",
    "react-router": "7.13.0",
    "react-router-templates": "github:remix-run/react-router-templates",
    "simple-git-hooks": "2.13.1",
    "smooth-scroll-into-view-if-needed": "2.0.2",
    "spark-md5": "3.0.2",
    "spatial-navigation-ts": "1.0.8",
    "swr": "2.4.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.18",
    "tailwindcss-motion": "1.1.1",
    "tailwindcss-safe-area": "1.3.0",
    "tempy": "3.2.0",
    "tsdown": "0.20.1",
    "type-fest": "5.4.3",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-devtools-json": "1.0.0",
    "wrangler": "4.62.0",
    "zod": "4.3.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm tsgo"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": [
      "pnpm oxfmt",
      "pnpm lint --fix"
    ],
    "*.json": "pnpm oxfmt",
    "pnpm-lock.yaml": "node --run=check-lockfile"
  },
  "engines": {
    "node": ">=25.3.0"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "react-router-templates",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver",
      "workerd"
    ],
    "patchedDependencies": {
      "@microsoft/clarity": "patches/@microsoft__clarity.patch",
      "goodcodes-parser": "patches/goodcodes-parser.patch",
      "selector-set": "patches/selector-set.patch",
      "spatial-navigation-ts": "patches/spatial-navigation-ts.patch"
    }
  },
  "hintConfig": {
    "extends": [
      "development"
    ],
    "hints": {
      "apple-touch-icons": "off",
      "compat-api/html": [
        "default",
        {
          "ignore": [
            "meta[name=theme-color]"
          ]
        }
      ],
      "no-inline-styles": "off"
    }
  }
}
