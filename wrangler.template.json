{
  "$schema": "node_modules/wrangler/config-schema.json",
  "assets": {
    "binding": "ASSETS",
    "directory": "./dist/assets",
    "html_handling": "drop-trailing-slash",
    "not_found_handling": "404-page"
  },
  "compatibility_date": "2025-04-01",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "d1_databases": [
    {
      "binding": "DB_LIBRARY",
      "database_id": "${DB_LIBRARY_DATABASE_ID}",
      "database_name": "retroassembly_library",
      "migrations_dir": "src/databases/library/migrations",
      "preview_database_id": "retroassembly-library"
    },
    {
      "binding": "DB_METADATA",
      "database_id": "${DB_METADATA_DATABASE_ID}",
      "database_name": "retroassembly_metadata",
      "migrations_dir": "src/databases/metadata/migrations",
      "preview_database_id": "retroassembly-metadata"
    }
  ],
  "main": "./dist/worker/serve-cloudflare.js",
  "name": "retroassembly",
  "observability": {
    "enabled": true,
    "head_sampling_rate": 1
  },
  "placement": {
    "mode": "smart"
  },
  "r2_buckets": [
    {
      "binding": "BUCKET",
      "bucket_name": "retroassembly",
      "preview_bucket_name": "retroassembly"
    }
  ],
  "upload_source_maps": true
}
