{
  "$schema": "node_modules/wrangler/config-schema.json",
  "assets": {
    "binding": "ASSETS",
    "directory": "./dist/assets",
    "html_handling": "drop-trailing-slash",
    "not_found_handling": "404-page",
    "run_worker_first": false
  },
  "compatibility_date": "2025-04-22",
  "compatibility_flags": [
    "global_fetch_strictly_public",
    "nodejs_compat",
    "no_handle_cross_request_promise_resolution"
  ],
  "d1_databases": [
    {
      "binding": "DB_LIBRARY",
      "database_id": "${DB_LIBRARY_DATABASE_ID}",
      "database_name": "retroassembly_library",
      "migrations_dir": "src/databases/library/migrations"
    }
  ],
  "main": "./src/server/server.ts",
  "name": "retroassembly",
  "observability": {
    "enabled": true,
    "head_sampling_rate": 1
  },
  "placement": {
    "mode": "smart"
  },
  "r2_buckets": [
    {
      "binding": "BUCKET",
      "bucket_name": "retroassembly",
      "preview_bucket_name": "retroassembly"
    }
  ],
  "vars": {
    "STORAGE_DOMAIN": "${STORAGE_DOMAIN}",
    "MSLEUTH_HOST": "${MSLEUTH_HOST}"
  },
  "services": [
    {
      "binding": "MSLEUTH",
      "service": "msleuth"
    }
  ],
  "upload_source_maps": true
}
